        <a href="#">Xem tất cả sản phẩm</a>
    </div>
    <div class="product-grid">
        <a href="@Url.Action("Details", "Product", new { id = 1 })" class="product-card-link">
            <div class="product-card" data-aos="fade-up" data-aos-delay="100">
                <div class="card-image-container">
                    <img src="https://www.kidsplaza.vn/media/catalog/product/a/p/aprica-kroon-hong.jpg" alt="Product">
                    <div class="card-overlay">
                        <span class="overlay-text">Xem chi tiết</span>
                    </div>
                </div>
                <div class="card-text-content">
                    <h3>Xe đẩy em bé Aprica</h3>
                    <p class="brand">Đăng bởi: Mẹ Bắp</p>
                    <p class="price">1.200.000₫</p>
                </div>
            </div>
        </a>

        <a href="@Url.Action("Details", "Product", new { id = 2 })" class="product-card-link">
            <div class="product-card" data-aos="fade-up" data-aos-delay="200">

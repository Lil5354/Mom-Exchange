        <a href="@Url.Action("Details", "Product", new { id = 3 })" class="product-card-link">
            <div class="product-card" data-aos="fade-up" data-aos-delay="300">
                <div class="card-image-container">
                    <img src="https://i.pinimg.com/1200x/78/29/91/7829917da73ef1917f7b50adc409a37a.jpg" alt="Product">
                    <div class="card-overlay">
                        <span class="overlay-text">Xem chi tiết</span>
                    </div>
                </div>
                <div class="card-text-content">
                    <h3>Set body sơ sinh</h3>
